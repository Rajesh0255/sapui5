<mvc:View controllerName="com.app.project1.controller.Newpage"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
 xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
    xmlns:uxap="sap.uxap">
     <uxap:ObjectPageLayout id="_IDGenObjectPageLayout1">
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle
                id="_IDGenObjectPageDynamicHeaderTitle1"
            >
                <uxap:expandedHeading>
                    <Title
                        id="_IDGenTitle1"
                        text="{author}"
                    />
                </uxap:expandedHeading>
                <uxap:actions>
                    <Button id="_IDGenButton1"
                        text="Edit"
                        type="Emphasized"
                        press="onEdit"
                    />
                    <Button id="_IDGenButton2"
                        type="Transparent"
                        text="Delete"
                    />
                    <Button id="_IDGenButton3"
                        type="Transparent"
                        text="Copy"
                    />
                    <OverflowToolbarButton id="_IDGenOverflowToolbarButton1"
                        icon="sap-icon://action"
                        type="Transparent"
                        text="Share"
                        tooltip="action"
                    />
                </uxap:actions>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>
        <uxap:headerContent>
            <FlexBox id="_IDGenFlexBox1"
                wrap="Wrap"
                fitContainer="true"
            >
                <layout:VerticalLayout id="_IDGenVerticalLayout1" class="sapUiSmallMarginBeginEnd">
                    <Link id="_IDGenLink1" text="{phone}" />
                </layout:VerticalLayout>
            </FlexBox>
        </uxap:headerContent>
        <uxap:sections>
            <uxap:ObjectPageSection
                titleUppercase="false"
                id="ops"
                title="Book Details"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection id="_IDGenObjectPageSubSection1">
                        <uxap:blocks>
                            <core:Fragment type="XML" fragmentName ="com.app.project1.fragments.bookdetails" />
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <uxap:ObjectPageSection
                titleUppercase="false"
                id="ops1"
                title="Author Address Details"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection id="_IDGenObjectPageSubSection2">
                        <uxap:blocks>
                           <core:Fragment type="XML" fragmentName ="com.app.project1.fragments.address" />
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <uxap:ObjectPageSection
                titleUppercase="false"
                id="ops2"
                title="Details"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection id="_IDGenObjectPageSubSection3">
                        <uxap:blocks>
                            <Text id="_IDGenText1" text="Naveen" />
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <uxap:ObjectPageSection
                titleUppercase="false"
                id="ops3"
                title="Contact Details"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection id="_IDGenObjectPageSubSection4">
                        <uxap:blocks>
                            <Text id="_IDGenText2" text="Naveen" />
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>


</mvc:View>